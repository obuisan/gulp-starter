{
  "src": "./dev",
  "dest": "./dist",
  "environment": {
    "development": {
      "archive": true,
      "ftpDeploy": false,
      "clean": true,
      "proxy": false
    },
    "production": {
      "archive": true,
      "ftpDeploy": true,
      "clean": false,
      "proxy": true
    }
  },
  "clean": [
    "**/*.html",
    "**/*.css",
    "**/*.js",
    "**/*.map",
    "**/*.zip"
  ],
  "copy": [
    {
      "name": "html",
      "src": [
        "index.html"
      ]
    }
  ],
  "css": [
    {
      "name": "style",
      "src": [
        "sass/**/*.scss"
      ],
      "sass": true
    },
    {
      "name": "test-css",
      "src": [
        "css/*.css"
      ],
      "lint": false
    }
  ],
  "js": [
    {
      "name": "main",
      "src": "./js/main.js",
      "babel": true
    }
  ]
}
