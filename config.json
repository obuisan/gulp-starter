{
  "clean": [
    "**/*"
  ],
  "copy": [
    {
      "name": "files",
      "src": [
        "**/*.{php,html}",
        "**/*.{gif,jpg,png,svg,webp}",
        "**/*.{eot,ttf,otf,woff,woff2}",
        "**/*.{pot,po,mo}"
      ]
    }
  ],
  "css": [
    {
      "name": "style",
      "src": [
        "sass/**/*.scss"
      ],
      "dest": "./",
      "sass": true
    }
  ],
  "js": [
    {
      "name": "main",
      "src": "js/main.js",
      "dest": "./",
      "babel": true
    }
  ]
}
