{
  "clean": [
    "**/*.html",
    "**/*.css",
    "**/*.js",
    "**/*.map",
    "**/*.zip"
  ],
  "copy": [
    {
      "name": "html",
      "src": [
        "index.html"
      ]
    }
  ],
  "css": [
    {
      "name": "style",
      "src": [
        "sass/**/*.scss",
        "sass/extra.css"
      ],
      "sass": true
    },
    {
      "name": "css-ordered",
      "src": [
        "css/*.css"
      ],
      "order": [
        "**/*2.css",
        "css/3.css",
        "**/*1.css"
      ],
      "lint": false
    }
  ],
  "js": [
    {
      "name": "main",
      "src": "./js/main.js",
      "babel": true
    }
  ]
}
